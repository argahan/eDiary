@using Microsoft.AspNet.Identity
@using E_GUNLUK.Models
<!DOCTYPE HTML>
<html>
<head>
    @RenderSection("head", required: false)

    <title>E-Gunluk | </title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta name="keywords" content="Business_Blog Responsive web template, Bootstrap Web Templates, Flat Web Templates, Android Compatible web template,
Smartphone Compatible web template, free webdesigns for Nokia, Samsung, LG, SonyErricsson, Motorola web design" />
    <script type="applijewelleryion/x-javascript"> addEventListener("load", function() { setTimeout(hideURLbar, 0); }, false); function hideURLbar(){ window.scrollTo(0,1); } </script>
    <link href="~/Content/css/bootstrap.css" rel='stylesheet' type='text/css' />
    <!-- Custom Theme files -->
    <link href='//fonts.googleapis.com/css?family=Roboto+Condensed:400,700' rel='stylesheet' type='text/css'>
    <link href='//fonts.googleapis.com/css?family=Open+Sans' rel='stylesheet' type='text/css'>
    <link href="~/Content/css/style.css" rel='stylesheet' type='text/css' />
    <script src="~/Content/js/jquery-1.11.1.min.js"></script>
    <script src="~/Content/js/bootstrap.min.js"></script>
    <script src="~/Scripts/ckeditor/ckeditor.js"></script>
    <script src="~/Scripts/jquery.signalR-2.1.2.min.js"></script>
    <script src="~/Scripts/dist/css/bootstrap.min.css></script>
    <script src="~/Scripts/css/custom.min.css></script>
    <script src="~/Scripts/font-awesome/css/font-awesome.min.css></script>


    <script src="/signalr/hubs"></script>
    @Scripts.Render("~/Bundles/ckeditor")
    <style>
        #text {
            width: 550px;
            overflow: hidden;
            white-space: nowrap;
            text-overflow: ellipsis;
        }

        #usertable {
            font-size: 12px;
            width: -1000px;
        }
    </style>
</head>
<body>
    <!--start-main-->
    <div class="header">
        <div class="header-top">
            <div class="container">
                <div class="logo">
                    <a href="/"><h1>E-Gunluk</h1></a>
                </div>
                <div class="login-area">
                    @Html.Partial("_LoginPartial")
                </div>
                <div class="social">
                    <ul>
                        <li><a href="#" class="facebook"> </a></li>
                        <li><a href="#" class="facebook twitter"> </a></li>
                        <li><a href="#" class="facebook in"> </a></li>
                        <li><a href="#" class="facebook yout"> </a></li>
                    </ul>
                </div>
                <div class="clearfix"></div>
            </div>
        </div>

        <!--head-bottom-->
        <div class="head-bottom">
            <div class="container">
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
                        <span class="sr-only">Toggle navigation</span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                </div>
                <div id="navbar" class="navbar-collapse collapse">
                    <ul class="nav navbar-nav">
                        <li>@Html.ActionLink("News Feed", "Index", "Home")</li>
                        
                        <li>@Html.ActionLink("Friends Feed", "FriendsFeed", "Home")</li>
                        <li>@Html.ActionLink("Favourites", "FavList", "Favorites")</li>
                        <li class="dropdown">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Notes <span class="caret"></span></a>
                            <ul class="dropdown-menu">
                                <li>@Html.ActionLink("My Notes", "Index", "Notes")</li>
                                <li>@Html.ActionLink("Add new Note", "Create", "Notes")</li>
                            </ul>
                        </li>
                        
                           
           
                        @{
                            if (User.IsInRole("Admin"))
                            {
                                <li>@Html.ActionLink("Manage Users", "Index", "Users")</li>
                                <li>@Html.ActionLink("Manage Tags", "Index", "Tags")</li>
                            }
                        }

                    </ul>
                </div><!--/.nav-collapse -->
            </div>
            
        </div>
        <!--head-bottom-->
    </div>
    <!-- banner -->
    <div class="banner1">

    </div>
    <!-- technology -->
    <div class="technology-1">
        <div class="container">
            <div class="col-md-9 technology-left">
                <div class="business">
                    <div class="" blog-grid2">
                        <div class="blog-text">
                            @RenderBody()
                        </div>
                    </div>


                </div>
            </div>
            <!-- technology-right -->
            <div class="col-md-3 technology-right-1">
                <div class="blo-top">
                    <div class="tech-btm">
                        <h4>Search</h4>
                        <div class="name">
                            <form action="~/Home/Search">
                                @Html.TextBox("SearchString") <br />
                                <input type="submit" value="Ara">
                            </form>
                        </div>
                        <div class="clearfix"> </div>
                    </div>
                </div>

               
                <div class="blo-top1">
                    <div class="tech-btm">
                        <h4>Top stories of the week </h4>
                        <div class="blog-grids">
                            @Html.Action("TopStories","Home")
                        </div>

       

      
                    </div>
                </div>

            </div>
            <div class="clearfix"></div>
            <!-- technology-right -->
        </div>
    </div>

    <div class="copyright">
        <div class="container">
            <p>© 2016 Business_Blog. All rights reserved | Template by <a href="http://www.zeyosoft.com">Zeyosoft</a></p>
        </div>
    </div>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jqueryval")
    @RenderSection("scripts", required: false)




</body>
</html>