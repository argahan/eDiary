@model E_GUNLUK.Models.Note

@{
    ViewBag.Title = "Details";
}


    
<div class="tc-ch">
    <div class="tch-img">
        <a href="#"><img src="~/Content/images/1.jpg" class="img-responsive" alt="" /></a>
    </div>
    <a class="blog blue" href="#">Technology</a>
    <h3><a href="/Notes/Details/@Model.NoteId">@Html.DisplayFor(modelItem => Model.Title)</a></h3><span>Published In: @Html.DisplayFor(modelItem => Model.NoteDate)| Privacy: @Html.DisplayFor(modelItem => Model.PubOrPvt) | By: @Html.DisplayFor(modelItem => Model.NoteTaker.Id)</span>

    <p>
        @Html.Raw(Model.NoteText)
    </p>
    <div class="blog-poast-info">
        <ul>
            <li><i class="glyphicon glyphicon-user"> </i><a class="admin" href="/Profiles/Details/@Model.NoteTaker.Id"> @Model.NoteTaker.FirstName @Model.NoteTaker.LastName</a></li>
            <li><i class="glyphicon glyphicon-calendar am_remove"> </i>@Model.NoteDate</li>
            <li><i class="glyphicon glyphicon-comment"> </i>@Html.Action("CommentsCounts", "Comments", new { id = Model.NoteId })</li>
            <li><i class="glyphicon glyphicon-heart"> </i>@Html.Action("LikesCounts", "Likes", new { id = Model.NoteId })</li>
        </ul>
    </div>

    @Html.Action("Like", "Likes", new { id = Model.NoteId })
    @Html.Action("AddToFav","Favorites", new { id = Model.NoteId})
    <div class="clearfix"></div>
    </div>

    <h4>
        Comments
    </h4>
<div>
    @Html.Action("Comment", "Comments", new { id = Model.NoteId })
    @Html.Action("CommentsList", "Comments", new { id = Model.NoteId })


</div>






